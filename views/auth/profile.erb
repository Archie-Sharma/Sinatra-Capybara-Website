<div class="container-fluid">
    <div class="row">
        <div class="col s12">
            <div class="card user-card" id="profile" style="background-image: url(<%= asset_path(@user.user_media.banner_img_url)%>)">
                <div class="card image-profile">
                    <div class="card-image z-depth-4">
                        <img class="responsive-img" src="<%= asset_path(@user.user_media.profile_img_url)%>">
                    </div>
                </div>
            </div>
        </div>
        <div class="col s9">
            <div class="card-content">
                <div class="card-tabs">
                    <ul class="tabs tabs-fixed-width">
                        <li class="tab">
                            <a href="#albums" class="">Albums</a>
                        </li>
                        <li class="tab">
                            <a class="" href="#tracks">Tracks</a>
                        </li>
                        <li class="tab">
                            <a href="#likes" class="active">Likes</a>
                        </li>
                        <div class="indicator" style="right: -0.0500031px; left: 141.05px;"></div>
                    </ul>
                </div>
                <div class="card-content grey lighten-4">
                    <div id="albums" style="display: none;" class="">Test 1</div>
                    <div id="tracks" class="" style="display: none;">
                    <% if @songs.any? %>
                        <% @songs.each do |song| %>
                        <div class="song__wrapper z-depth-1">
                            <figure>
                                <a href="/music/play/<%=song.id %>">
                                    <img src="<%= asset_path('songs/default_song.png')%>">
                                </a>
                            </figure>
                            <div class="song-action">
                                <a class="btn-flat dropdown-button" href="#!" data-activates="dropdown2"><i class="material-icons">share</i></a>
                                <a class="btn-flat"  href="#!"><i class="material-icons">file_download</i></a>  
                                <a class="btn-flat"  href="#!"><i class="material-icons">favorite</i></a>                                                                                              
                                <a class="pre-delete-song  btn-flat" href="#modal-delete-song" data-id-song="<%=song.id %>"><i class="material-icons">delete_forever</i></a>
                                <ul id="dropdown2" class="dropdown-content">
                                    <li><a href="https://www.facebook.com/sharer/sharer.php?u=http%3A//localhost%3A8000/music/play/3"><i class="fa fa-facebook" aria-hidden="true"></i></a></li>
                                    <li><a href="https://pinterest.com/pin/create/button/?url=<%= asset_path('songs/default_song.png')%>&media=http%3A//localhost%3A8000/music/play/3&description=<%= song.title %> - <%=song.description%>"><i class="fa fa-pinterest" aria-hidden="true"></i></a></li>
                                    <li><a href="https://twitter.com/home?status=http%3A//localhost%3A8000/music/play/3"><i class="fa fa-twitter" aria-hidden="true"></i></a></li>
                                    <li><a href="https://plus.google.com/share?url=http%3A//localhost%3A8000/music/play/3"><i class="fa fa-google-plus" aria-hidden="true"></i></a></li>                                    
                                </ul>                            
                            </div>                            
                            <div class="song-dates">
                                <p class="song-title"><%= song.title %> | <span><%=song.description%></span></p>
                                <p>Genre <%=song.genre%></p>
                                <p>Type  <%=song.type%></p>
                                <p>License  <%=song.license%></p>
                                <audio class="col l8 s7 m7" src="<%=song.url_song%>" controls></audio>
                                <a class="btn-flat align-icon-text"  href="#!"><i class="material-icons">play_arrow</i> 0</a>       
                            </div>
                        </div>
                        <% end %>
                    <% else %>
                        <h1>No have songs</h1>
                    <% end %>

                    </div>
                    <div id="likes" style="display: block;" class="active">Test 3</div>
                </div>
            </div>
        </div>
        <div class="info--wraper col s3">

        <article class="infoStats">
            <table class="infoStats__table sc-type-small">
                <tbody>
                    <tr>
                        <td class="infoStats__stat sc-link-light sc-border-light-right">
                            <a href="/aboutcarlos/followers" rel="nofollow" class="" title="83 followers">
                                <h3 class="infoTitle">Followers</h3>
                                <div class="">0</div>
                                <!-- COUNT FOLLOWERS -->
                            </a>
                        </td>
                        <td class="infoStats__stat sc-link-light sc-border-light-right">
                            <a href="/aboutcarlos/following" rel="nofollow" class="" title="Following 164 people">
                                <h3 class="infoTitle">Following</h3>
                                <div class="">0</div>
                                <!-- COUNT FOLLOWING -->
                            </a>
                        </td>
                        <td class="infoStats__stat">
                            <a href="/aboutcarlos/tracks" rel="nofollow" class="" title="18 tracks">
                                <h3 class="infoTitle">Tracks</h3>
                                <div class="">0</div>
                                <!-- COUNT TRACKS -->
                            </a>
                        </td>
                    </tr>
                </tbody>
            </table>
            <div class="infoStats__description">
                <div class="truncatedUserDescription m-collapsed">
                    <div class="truncatedUserDescription__wrapper" style="max-height: 85px;">
                        <div class="truncatedUserDescription__content">
                            <div>
                              <% if @user.user_information.bio %>
                                <p><%= @user.user_information.bio%></p>
                              <% else %>
                                <p>Add a litle biographic in Setting</p>
                              <% end %>
                            </div>
                        </div>
                    </div>
                    <a class="truncatedUserDescription__collapse sc-link-dark g-link-collapse collapsed" href="#">Show more</a>
                    <!-- AcÃ¡ habra un modal para el show more -->
                </div>
            </div>
            <div class="web-profiles">
                <ul class="sc-list-nostyle sc-clearfix">
                  <!-- if hay social -->
                    <li class="web-profiles__item">
                        <div class="sc-truncate">
                            <a href="https://exit.sc?url=https%3A%2F%2Fplus.google.com%2Fu%2F0%2F106092849867402977611" target="_blank" rel="me nofollow" class="web-profile sc-link-light">
                                <span class="sc-social-icon sc-social-icon-googleplus"></span>
                                Social
                            </a>
                        </div>
                    </li>
                  <!-- endif -->
                </ul>
            </div>
        </article>
      </div>

    </div>
</div>

<div id="modal-delete-song" class="modal">
    <div class="modal-content">
    <h4>Are you sure delete this song?</h4>
    </div>
    <div class="modal-footer">
    <form id="form-delete-song" action="music/song/>" method="post">
        <input type="hidden" name="_method" value="DELETE">
        <input type="submit" class="modal-action modal-close waves-effect waves-green btn-flat"
        value="Yes, delete">
    </form>
    </div>
</div>

<script>
    $( document ).ready(function() {
        $(".pre-delete-song").click(function(){
            var song_id = $(this).attr("data-id-song");
            $('#form-delete-song').attr('action', "/music/song/" + song_id);
        })
    });
</script>