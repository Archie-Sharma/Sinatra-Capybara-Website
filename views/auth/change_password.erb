<div class="container" style="margin-top:2.5%">
  <div class="row">
    <h3>Change your password</h3>
    <p>Remember your secret for confirm password</p>
    <form id="form__change__password" action="/auth/change_password" method="post">
       <div class="input-field col s4">
        <i class="material-icons prefix">vpn_key</i>
        <input name="recover_password" type="text" class="validate">
        <label>Your secret</label>
       </div>
      <div class="input-field col s4">
       <i class="material-icons prefix">https</i>
       <input name="password_old" type="password" class="validate">
       <label>Old password</label>
     </div>
    <div class="input-field col s4">
     <i class="material-icons prefix">update</i>
     <input name="password_new" type="password" class="validate">
     <label>New password</label>
   </div>
    <center>
      <button class="btn waves-effect waves-light change_password_button" type="submit">Change password
       <i class="material-icons right">send</i>
     </button>
    </center>
   </form>
  </div>
</div>
