<div class="row">
  <div class="col s6 m10">
        <figure>
          <img src="<%= asset_path('songs/default_song.png')%>">
          <span class="card-title"><%=@song.title%></span>
        </figure>
        <figcaption>
          <p><%=@song.description%></p>
          <p><%=@song.genre%>  <%=@song.type%>  <%=@song.license%></p>  
          <audio src="<%=@song.url_song%>" controls></audio>
          <a href="#">Like</a>
            <!-- Modal Trigger -->
            <a class="waves-effect waves-light btn" href="#modal-delete-song">Delete?</a>
        </figcaption>
    </div>
  </div>

  <!-- Modal Structure -->
  <div id="modal-delete-song" class="modal">
    <div class="modal-content">
      <h4>Are you sure delete this song?</h4>
    </div>
    <div class="modal-footer">
      <a href="#!" class="modal-action modal-close waves-effect waves-green btn-flat">Delete</a>
    </div>
  </div>
         